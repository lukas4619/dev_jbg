<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ArticleauditMapper">
	
	<!--表名 -->
	<sql id="tableName">
		T_ARTICLEAUDIT
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		ID,	
		DETAILS,	
		CREATEDATE,	
		OPERATIONNAME,	
		ARTICLEID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{ID},	
		#{DETAILS},	
		#{CREATEDATE},	
		#{OPERATIONNAME},	
		#{ARTICLEID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
		DETAILS,	
		CREATEDATE,	
		OPERATIONNAME,	
		ARTICLEID
		) values (
		#{DETAILS},	
		#{CREATEDATE},	
		#{OPERATIONNAME},	
		#{ARTICLEID}
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			ID = #{ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			DETAILS = #{DETAILS},
			CREATEDATE = #{CREATEDATE},
			OPERATIONNAME = #{OPERATIONNAME},
			ARTICLEID = #{ARTICLEID},
		where 
		ID = #{ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			ID = #{ID}
	</select>
	
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd!=null">
			<if test="pd.articleID!= null and pd.articleID != ''">
				and articleID=#{pd.articleID}
			</if>
			<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
				and 
				(details LIKE CONCAT(CONCAT('', #{pd.keywords}),'%')
				 or
				 operationName LIKE CONCAT(CONCAT('', #{pd.keywords}),'%')
				)
			</if>
			<if test="pd.lastStart!= null and pd.lastStart != ''">
		 <![CDATA[ AND  DATE_FORMAT(createDate,'%Y-%m-%d') >=#{pd.lastStart}]]>
			</if>
			<if test="pd.lastEnd!= null and pd.lastEnd != ''">
		 <![CDATA[ AND  DATE_FORMAT(createDate,'%Y-%m-%d') <= #{pd.lastEnd} ]]>
			</if>
		</if>
		order by createDate desc
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where  1=1 
		<if test="articleID!= null and articleID != ''"><!-- 关键词检索 -->
				and articleID=#{articleID}
		</if>
		order by createDate desc
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- 414024003@qq.com -->
</mapper>